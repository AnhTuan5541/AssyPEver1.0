    <script>
        let _userID, _userName, _userMail, _userDeparment, _userSystem, _userRole, _userActive;

        $(document).ready(function () {

            let currentUrl = window.location.pathname;
            if (currentUrl === '/wafer-map-viewer') $('#wafer-map-viewer').addClass('active');
            if (currentUrl === '/mold1') $('#mold1').addClass('active');
            if (currentUrl === '/lcr-create') $('#lcr-create').addClass('active');

            const token = getCookie('auth_token');
            if (!token) {
                logout();
            }
            else {
                getUserInfo(localStorage.getItem('user_id')).then(res => {
                    const us_in_token = getCookie('us_in_token');
                    [_userID, _userName, _userMail, _userDeparment, _userSystem, _userRole, _userActive] = us_in_token.split('|');

                    $('#userInfo').html(_userName + '(' + _userID + ')');

                    if (Number(_userActive) !== 1) {
                        alert('Your account is blocked! Please contact IT to unblock your account.');
                        logout();
                    }

                })
                .catch (err => {
                    alert('An error occurred. ' + err.responseText);
                });
            }
        });

        function logout() {
            window.location.replace('/auth')
            deleteCookie("auth_token");
            deleteCookie("us_in_token");
            localStorage.removeItem("user_id");
        }

    </script>
